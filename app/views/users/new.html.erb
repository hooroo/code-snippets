<h1><%= t(".title") %></h1>
<%= simple_form_for @user, url: user_path do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.button :submit, t(".submit") %>
<% end %>
<p>
  <%= t(".sign_in_message_html", href: link_to("here", login_path)) %>
</p>
